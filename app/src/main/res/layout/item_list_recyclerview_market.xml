<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/store_item_background">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="#C35A5A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_salary_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/lexenddeca_regular"
        android:textColor="#202124"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/notosansarabic_semibold"
        android:gravity="bottom|center|center_horizontal|center_vertical"
        android:text="Ø¬"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toStartOf="@+id/text_view_salary_market"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/text_view_name_tool"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:fontFamily="@font/notosansarabic_condensed"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toEndOf="@+id/text_view_salary_market"
        app:layout_constraintTop_toBottomOf="@+id/text_view_salary_market" />
</androidx.constraintlayout.widget.ConstraintLayout>