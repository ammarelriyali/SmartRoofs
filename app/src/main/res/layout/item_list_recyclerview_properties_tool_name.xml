<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/text_view_recyclerview_porperties_tool_name"
        app:layout_constraintTop_toTopOf="@+id/text_view_recyclerview_porperties_tool_name"
        app:srcCompat="@drawable/icon_ellipse" />

    <TextView
        android:id="@+id/text_view_recyclerview_porperties_tool_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/notosansarabic_condensed"
        android:gravity="center"
        android:text="تحتاج إلى تربة جيدة الصرف"
        android:textAlignment="viewEnd"
        android:textColor="@color/dark_text"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>