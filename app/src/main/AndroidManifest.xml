<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.web.app.smartroof">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/am"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartRoofs">
        <activity android:name=".Activity.LoginActivity"
            android:theme="@style/WelcomeActivity"></activity>
        <activity
            android:name=".Activity.ArticleSubCatActivity"
            android:theme="@style/WelcomeActivity" />
        <activity
            android:name=".Activity.CategoryActivity"
            android:theme="@style/WelcomeActivity" />
        <activity
            android:name=".Activity.CartActivity"
            android:theme="@style/WelcomeActivity" />
        <activity
            android:name=".Activity.SearchActivity"
            android:theme="@style/WelcomeActivity" />
        <activity
            android:name=".Activity.NameToolActivity"
            android:theme="@style/WelcomeActivity" />
        <activity
            android:name=".Activity.ArticleActivity"
            android:theme="@style/WelcomeActivity" />
        <activity
            android:name=".Activity.FavoriteActivity"
            android:theme="@style/WelcomeActivity" />
        <activity
            android:name=".Activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:exported="true"
            android:theme="@style/WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.WelcomeActivity"
            android:fitsSystemWindows="true"
            android:theme="@style/WelcomeActivity" />
    </application>

</manifest>